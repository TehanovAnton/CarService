<h1>Users</h1>

<%= link_to "SIGN_UP",
    new_user_registration_path,
    method: :get
%>

<ul>
    <%@users.each do |user|%>        
        <li><%=user.type == 'Admin' ? 'Admin' : 'User'%></li>
        <li><%= link_to "#{user.last_name} #{user.first_name.first}.",
            user_path(user),
            method: :get
            %>
        </li>

        <%if current_user == user || current_user&.instance_of?(Admin)%>
            <li><%= link_to "Delete",
                user_path(user),
                method: :delete,
                data: { confirm: "Are you sure?" }
                %>
            </li>

            <li><%= link_to "Edit",
                current_user&.instance_of?(Admin) ? edit_admin_path(user) : edit_path(user),
                method: :get 
                %>
            </li>
        <%end%>
        <br/>
    <%end%>
</ul>