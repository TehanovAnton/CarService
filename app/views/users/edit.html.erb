<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2><%= t 'user_edit.Edit' %></h2>
        </div>

        <div class="row">

          <div class="col-lg-3"></div>

          <div class="col-lg-6 mt-4 mt-lg-0">

            <%= form_with url: user_path(@user), html: {class: "php-email-form"}, model: @user do |f| %>
              <div class="row">
                <div class="col-md-6 form-group">
                  <div class="form-floating">
                    <%= f.text_field :first_name, class: 'form-control', requiered: "requiered" %>
                    <label><%= t 'user_edit.Your_first_name' %></label>
                  </div>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">
                    <%= f.text_field :last_name, class: 'form-control', requiered: "requiered" %>
                    <label><%= t 'user_edit.Your_last_name'%></label>
                  </div>         
                </div>     
              </div><br/>

              <div class="row">
                <div class="col-md-6 form-group">
                  <div class="form-floating">
                    <%= f.text_field :phone_number, class: 'form-control', requiered: "requiered" %>
                    <label><%= t 'user_edit.Your_phone_numbe' %></label>
                  </div>     
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">
                    <%= f.email_field :email, class: 'form-control', requiered: "requiered" %>
                    <label><%= t 'user_edit.Your_email' %></label>
                  </div>     
                </div>     
              </div><br/>        

              <div class="text-center">
                <button type="submit"><%= t 'user_edit.Update' %></button>
              </div>
            <% end %>

          </div>

        </div>

      </div>
    </section>
</main>
<!-- End Contact Section -->  