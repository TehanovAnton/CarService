<h1>Edit</h1>
<%=form_with url: edit_path(@user, id: @user.id), method: :put, model: @user do |form|%>
    <div>
        <%=form.text_area :first_name %>
        <%=form.text_area :last_name %>
        <%=form.text_area :email %>
        <%=form.text_area :phone_number %>
    </div>

    <div>
        <%=form.submit%>
    </div>
<%end%>