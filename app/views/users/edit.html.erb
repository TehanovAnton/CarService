<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Edit</h2>
        </div>

        <div class="row">

          <div class="col-lg-3"></div>

          <div class="col-lg-6 mt-4 mt-lg-0">

            <%= form_with url: user_path(current_user), html: {class: "php-email-form"}, model: current_user do |f| %>
              <div class="row">
                <div class="col-md-6 form-group">
                  <%= f.text_field :first_name, class: 'form-control', placeholder: 'Your first name', requiered: "requiered" %>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <%= f.text_field :last_name, class: 'form-control', placeholder: 'Your last name', requiered: "requiered" %>
                </div>     
              </div><br/>

              <div class="row">
                <div class="col-md-6 form-group">
                  <%= f.text_field :phone_number, class: 'form-control', placeholder: 'Your phone number', requiered: "requiered" %>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <%= f.email_field :email, class: 'form-control', placeholder: 'Your email', requiered: "requiered" %>
                </div>     
              </div>              

              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>

              <div class="text-center">
                <button type="submit">Update</button>
              </div>
            <% end %>

          </div>

        </div>

      </div>
<!-- End Contact Section -->  