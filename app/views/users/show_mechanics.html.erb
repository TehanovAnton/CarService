<main id="main">
  <section id="team" class="team section-bg">
    <div class="container">

      <div class="section-title">
        <h2><%= t 'show_mechanics.Mechanics' %></h2>
        <p><%= t 'show_mechanics.Here_you_can_see_our_mechanics' %></p>
      </div>

      <div class="row">
        <% @mechanics.each_with_index do |m, i| %>
          <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
            <div class="member">
              <div class="member-img">
                <img src="/assets/theme/img/team/team-1.jpg" class="img-fluid" alt="">
                <div class="social">
                  <a href=""><i class="bi bi-twitter"></i></a>
                  <a href=""><i class="bi bi-facebook"></i></a>
                  <a href=""><i class="bi bi-instagram"></i></a>
                  <a href=""><i class="bi bi-linkedin"></i></a>
                </div>
              </div>
              <div class="member-info">
                <h4> <%= i+1 %>. <%= m.first_name %> <%= m.last_name %></h4>
                <ul>
                  <% m.services.each do |s| %>
                    <li> <%= s.title %> </li>
                  <% end %>
                <ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </section><!-- End Team Section -->
</main>
<!-- End Contact Section -->  