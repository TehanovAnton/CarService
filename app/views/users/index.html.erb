<h1>Users</h1>

<%= link_to "SIGN_OUT", destroy_user_session_path(current_user), method: :delete %>

<ul>
    <%@users.each do |user|%>        
        <li
            ><%=user.type%>
        </li>

        <li>
            <%= link_to "#{user.last_name} #{user.first_name.first}.", user_path(user)%>
        </li>

        <%if user == current_user || current_user.is_a?(Admin) %>
            <li>
                <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
            </li>

            <li>
                <%= link_to "Edit", edit_user_path(user)%>
            </li>
        <%end%>

        <br/>
    <%end%>
</ul>