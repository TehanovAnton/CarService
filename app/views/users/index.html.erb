<h1>Users</h1>

<%= link_to "SIGN_UP",
    new_user_registration_path    
%>

<ul>
    <%@users.each do |user|%>        
        <li><%=user.type == 'Admin' ? 'Admin' : 'User'%></li>

        <li><%= link_to "#{user.last_name} #{user.first_name.first}.",
            user_path(user)            
            %>
        </li>

        <li><%= link_to "Delete",
            user_path(user),
            method: :delete,
            data: { confirm: "Are you sure?" }
            %>
        </li>

        <li><%= link_to "Edit",
            edit_path(user, id: user.id)
            %>
        </li>
        <br/>
    <%end%>
</ul>