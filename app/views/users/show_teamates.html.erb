<!-- ======= Team Section ======= -->
<section id="team" class="team section-bg">
  <div class="container">

    <div class="section-title">
      <h2>Team</h2>
      <p>Here you can see the leaders of our company. Each of them is a real professional in their field.</p>
    </div>

    <div class="row">
    <% Teammate.all.each_with_index do |t, i| %>
      <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
        <div class="member">
          <div class="member-img">
            <img src="/assets/theme/img/team/team-1.jpg" class="img-fluid" alt="">
            <div class="social">
              <a href=""><i class="bi bi-twitter"></i></a>
              <a href=""><i class="bi bi-facebook"></i></a>
              <a href=""><i class="bi bi-instagram"></i></a>
              <a href=""><i class="bi bi-linkedin"></i></a>
            </div>
          </div>
          <div class="member-info">
            <h4><%= t.first_name %> <%= t.last_name %></h4>
            <span>
              <% t.positions.each do |p| %>
                <%= p.position %>
              <% end %>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  </div>
</section><!-- End Team Section -->