<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Sign In</h2>
        </div>

        <div class="row">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-map"></i>
                  <h3>Our Address</h3>
                  <p>A108 Adam Street, New York, NY 535022</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3>Email Us</h3>
                  <p>info@example.com<br>contact@example.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3>Call Us</h3>
                  <p>+1 5589 55488 55<br>+1 6678 254445 41</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6 mt-4 mt-lg-0">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "php-email-form"}) do |f| %>  
                <% url = Rails.application.routes.recognize_path(request.referrer) %>

                <div class="form-group mt-3">
                  <div class="form-floating">                    
                    <input type="email" id="email" name="user[email]" class="form-control" required>
                    <label for="email">Your email</label>
                  </div>
                </div>

                <div class="form-group mt-3">                    
                    <div class="form-floating">                    
                      <input type="password" id="password" name="user[password]" class="form-control" row='9' required>
                      <label for="password">Password</label>
                    </div>
                </div><br/>

                <div class="text-center">
                    <button type="submit">Sing in</button>
                </div>

                <div class="text-center">                
                  <a href=<%= new_user_registration_path %>>Don't have an account</a>
                </div>
            <% end %>

          </div>

        </div>

      </div>
<!-- End Contact Section -->  