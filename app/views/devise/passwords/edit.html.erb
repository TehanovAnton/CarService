<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Resset password</h2>
        </div>

        <div class="row">

          <div class="col-lg-3"></div>

          <div class="col-lg-6 mt-4 mt-lg-0">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <%= f.password_field :password, id: 'password', class: 'form-control', row: '9', required: 'required' %>
                  <%= f.label 'New password', for: 'password' %>
                </div>
              </div>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <%= f.password_field :password_confirmation, id: 'password_confirmation', class: 'form-control', row: '9', required: 'required' %>
                  <%= f.label 'Confirm password', for: 'password_confirmation' %>
                </div>
              </div>

              <div class="text-center">
                <button type="submit">Change password</button>
              </div>
            <% end %>

          </div>

        </div>

      </div>
    </section>
</main>
<!-- End Contact Section -->  
