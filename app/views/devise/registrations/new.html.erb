<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Sign Up</h2>
        </div>

        <div class="row">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-map"></i>
                  <h3>Our Address</h3>
                  <p>A108 Adam Street, New York, NY 535022</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3>Email Us</h3>
                  <p>info@example.com<br>contact@example.com</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3>Call Us</h3>
                  <p>+1 5589 55488 55<br>+1 6678 254445 41</p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6 mt-4 mt-lg-0">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "php-email-form"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>              
              
              <div class="row">
                <div class="col-md-6 form-group">
                   <div class="form-floating">                    
                      <input type="text" id="first_name" name="user[first_name]" class="form-control" row='9' required>
                      <label for="first_name">Your first name</label>
                    </div>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">                    
                    <input type="text" id="last_name" name="user[last_name]" class="form-control" row='9' required>
                    <label for="last_name">Your last name</label>
                  </div>
                </div>     
              </div><br/>

              <div class="row">
                <div class="col-md-6 form-group">
                  <div class="form-floating">                    
                    <input type="text" id="phone_number" name="user[phone_number]" class="form-control" row='9' required>
                    <label for="phone_number">Your phone number</label>
                  </div>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">                    
                    <input type="text" id="email" name="user[email]" class="form-control" row='9' required>
                    <label for="email">Your email</label>
                  </div>
                </div>     
              </div>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <input type="password" id="password" name="user[password]" class="form-control" row='9' required>
                  <label for="password">Password</label>
                </div>
              </div>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <input type="password" id="password" name="user[password_confirmation]" class="form-control" row='9' required>
                  <label for="password">Password onfirmation</label>
                </div>
              </div><br/>

              <div class="text-center">
                <button type="submit">Sing up</button>
              </div>

              <div class="text-center">
                <a href="new_user_session_path">Already have an account</a>
              </div>
            <% end %>

          </div>

        </div>

      </div>
<!-- End Contact Section -->  