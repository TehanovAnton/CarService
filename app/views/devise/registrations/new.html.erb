<main id="main">
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact section-bg">
      <div class="container">

        <div class="section-title">
          <h2><%= t 'new_registration.sign_up' %></h2>
        </div>

        <div class="row">

          <div class="col-lg-6">

            <div class="row">
              <div class="col-md-12">
                <div class="info-box">
                  <i class="bx bx-map"></i>
                  <h3><%= t 'new_registration.our_adress' %></h3>
                  <p><%= t 'new_registration.a108_adam_street' %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-envelope"></i>
                  <h3><%= t 'new_registration.email_us' %></h3>
                  <p><%= t 'new_registration.info_example_com' %><br><%= t 'new_registration.contact_example_com' %></p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="info-box mt-4">
                  <i class="bx bx-phone-call"></i>
                  <h3><%= t 'new_registration.call_us' %></h3>
                  <p><%= t 'new_registration.phone1_5589_55488_55' %><br/><%= t 'new_registration.phone1_6678_254445_41' %></p>
                </div>
              </div>
            </div>

          </div>

          <div class="col-lg-6 mt-4 mt-lg-0">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "php-email-form"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>              
              
              <div class="row">
                <div class="col-md-6 form-group">
                   <div class="form-floating">                    
                      <input type="text" id="first_name" name="user[first_name]" class="form-control" row='9' required>
                      <label for="first_name"><%= t 'new_registration.Your_first_name' %></label>
                    </div>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">                    
                    <input type="text" id="last_name" name="user[last_name]" class="form-control" row='9' required>
                    <label for="last_name"><%= t 'new_registration.Your_last_name' %></label>
                  </div>
                </div>     
              </div><br/>

              <div class="row">
                <div class="col-md-6 form-group">
                  <div class="form-floating">                    
                    <input type="text" id="phone_number" name="user[phone_number]" class="form-control" row='9' required>
                    <label for="phone_number"><%= t 'new_registration.Your_phone_numbe' %></label>
                  </div>
                </div>

                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <div class="form-floating">                    
                    <input type="text" id="email" name="user[email]" class="form-control" row='9' required>
                    <label for="email"><%= t 'new_registration.Your_email' %></label>
                  </div>
                </div>     
              </div>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <input type="password" id="password" name="user[password]" class="form-control" row='9' required>
                  <label for="password"><%= t 'new_registration.Password' %></label>
                </div>
              </div>

              <div class="form-group mt-3">
                <div class="form-floating">                    
                  <input type="password" id="password" name="user[password_confirmation]" class="form-control" row='9' required>
                  <label for="password"><%= t 'new_registration.Password_сonfirmation' %></label>
                </div>
              </div><br/>

              <div class="text-center">
                <button type="submit"><%= t 'new_registration.Sing_up' %></button>
              </div>
            <% end %>

          </div>

        </div>

      </div>
<!-- End Contact Section -->  