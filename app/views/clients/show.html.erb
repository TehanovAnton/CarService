<!-- ======= Frequently Asked Questions Section ======= -->
<section id="faq" class="faq">
    <div class="container">

    <div class="section-title">
        <h2>Clients</h2>
    </div>

    <ul class="faq-list">

        <% @clients_all.each do |c| %>
            <li>

                <div data-bs-toggle="collapse" class="collapsed question" href=<%= "#faq#{c.id}" %>>
                    <%= "#{c.first_name} #{c.last_name} #{c.phone_number}" %>
                    <i class="bi bi-chevron-down icon-show"></i><i class="bi bi-chevron-up icon-close"></i>
                </div>

                <div id=<%= "faq#{c.id}" %> class="collapse" data-bs-parent=".faq-list">
                    <section id="actual" class="why-us">
                        <div class="container">
                            <div class="row">
                                <% c.orders.each do |order|%>
                                    <div class="col-lg-4 mt-4 mt-lg-4">
                                        <div class="box">
                                        <span><%= order.id %></span>
                                        <h4><%= order.state %></h4>
                                        <p><%= order.description %></p>
                                        <% if current_user.is_a?(Admin) && order.state != 'done' %>
                                            <%= link_to 'Update state', user_order_path(current_user, order, state: 'change'), method: :put, zclass: 'btn-get-started scrollto'%>
                                        <% end %>
                                        </div>
                                    </div>
                                <% end %> 
                            </div>
                        </div>
                    </section>
                </div>

            </li>
        <% end %>
        
    </ul>

    </div>
</section><!-- End Frequently Asked Questions Section -->
