<!-- ======= Team Section ======= -->
    <br/>
    <br/>
    <section id="team" class="team section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Profile</h2>
          <p>Here you can see your infomatiom.</p>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch"></div>
            <!-- Profile info -->
            <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                <div class="member">
                    <div class="member-img">
                        <img src="assets/theme/img/team/team-1.jpg" class="img-fluid" alt="">
                    </div>

                    <div class="member-info">
                        <h4><%= @me.first_name %> <%= @me.last_name %></h4>
                        <span><%= @me.phone_number %></span>
                        <span><%= @me.email %></span>
                    </div>
                </div>
            </div>

        </div>

      </div>
    </section><!-- End Team Section -->