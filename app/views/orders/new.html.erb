<main id="main">
  <section id="contact" class="contact section-bg">
    <div class="container">

      <div class="section-title">
        <h2>Order</h2>
      </div>

      <div class="row">
        <div class="col-lg-3"></div>

        <div class="col-lg-6 mt-4 mt-lg-0">
          <%= form_for(@order, as: :order, url: client_orders_path(@client), html: {class: "php-email-form"}) do |f| %>
            <div class="row">
              <div class="form-group mt-3">

                <!-- Description -->
                <div class="form-floating">
                  <%= f.hidden_field :client_id, value: @client.id %>
                  <%= f.text_field :description, class: 'form-control', id: 'description', value: @description, required: true %>
                  <%= f.label 'Description', for: 'description' %>
                </div><br/>
                <!-- End Description -->

                <!-- Service select -->              
                <%= f.fields_for :service_order_attributes do |ff| %>
                  <div class='form-floating'>
                    <%= ff.collection_select(:service_id, @services, :id, :title, {}, { class: 'form-select', id: 'services', aria_lable: 'Default select example' }) %>
                    <%= f.label 'Services', for: 'services' %>
                  </div><br/>
                <% end %>                
                <!-- End Service select -->

                <!-- Mechanics select -->
                <div class='form-floating'>
                  <%= f.collection_select(:mechanic_id, @mechanics, :id, :full_name, {}, { class: 'form-select', id: 'mechanics', selected: 197, aria_lable: 'Defult select example' }) %>
                  <%= f.label 'Mechanics', for: 'mechanics' %>
                </div>
                <!-- End Mechanics select -->

              </div>     
            </div>
            <br/>              

            <div class="text-center">
              <%= f.button 'Create' %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </section>
</main>
<!-- End Contact Section -->  