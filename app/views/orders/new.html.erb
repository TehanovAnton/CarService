<main id="main">
  <section id="contact" class="contact section-bg">
    <div class="container">

      <div class="section-title">
        <h2>Order</h2>
      </div>

      <div class="row">

        <div class="col-lg-3"></div>

        <div class="col-lg-6 mt-4 mt-lg-0">
          <%= form_for(@client.orders.build, as: :order, url: client_orders_path(@client), html: { class: "php-email-form" }) do |f| %>
            <div class="row">
              <div class="form-group mt-3">

                <!-- Description -->
                <div class="form-floating">
                  <%= f.hidden_field :client_id, value: @client.id %>
                  <%= f.text_field :description, class: 'form-control', id: 'description', required: true %>
                  <%= f.label 'Description', for: 'description' %>
                </div><br/>
                <!-- End Description -->


                <div>
                  <%= f.fields_for :service_order_attributes do |ff| %>
                    <div>
                      <%= ff.collection_select(:service_id, Service.all, :id, :title, {}, {size: 2 }) %>
                    </div><br/>
                  <% end %>
                <div>
                <!-- Service select -->
                <!-- End Service select -->


                <!-- Mechanics select -->
                <div>
                  <%= f.label 'Mechanics', for: 'mechanics' %>
                  <%= select_tag('order[mechanic_id]', options_for_select(@mechanics_for_options),
                      class: 'form-select', id: 'mechanics')
                  %>
                </div>
                <!-- End Mechanics select -->
              </div>
            </div>
            <br/>

            <div class="text-center">
              <button type="submit">Create</button>
            </div>
          <% end %>
        </div>

      </div>

    </div>

  </section>

  <section id="team" class="team section-bg">
    <div class="container">

      <div class="section-title">
        <h2>Mechanics</h2>
        <p>Here you can see our mechanics.</p>
      </div>

      <div class="row">
        <% @mechanics.each_with_index do |m, i| %>
          <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
            <div class="member">
              <div class="member-img">
                <img src="/assets/theme/img/team/team-1.jpg" class="img-fluid" alt="">
                <div class="social">
                  <a href=""><i class="bi bi-twitter"></i></a>
                  <a href=""><i class="bi bi-facebook"></i></a>
                  <a href=""><i class="bi bi-instagram"></i></a>
                  <a href=""><i class="bi bi-linkedin"></i></a>
                </div>
              </div>
              <div class="member-info">
                <h4> <%= i+1 %>. <%= m.first_name %> <%= m.last_name %></h4>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </section><!-- End Team Section -->
</main>

<!-- End Contact Section -->
