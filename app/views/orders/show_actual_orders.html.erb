<section id="actual" class="why-us">
  <div class="container">
    <% if current_user.no_orders? %>
      <div class="section-title">        
        <p><%= t 'flashes.You_have_no_orders_yet' %></p>
      </div>
    <% else %>
     <div class="row">
        <% @orders.each do |order|%>
          <% @mechanic = Mechanic.find_by(id: order.mechanic_id) %>
          <div class="team col-lg-4">     
            <div class="col-lg-12">
              <div class="member">              
                <div class="member-img col-lg-12 mt-6 mt-lg-6">

                  <div class="box">
                    <span><%= order.state %></span>
                    <h4><%= order.description %></h4>
                    <p><%= "#{@mechanic.first_name} #{@mechanic.last_name}" %></p>
                  </div>                     

                  <% if order.in_review? %>
                    <div class="social">                    
                      <%= link_to t('Edit'), edit_client_order_path(current_user, order), method: :get%>
                      <%= link_to t('Delete'), client_order_path(current_user, order), method: :delete%>
                    </div>
                  <% end %>

                </div>
              </div>
            </div>
          </div>     
        <% end %>
      </div>
    <% end %>
  </div>
</section>